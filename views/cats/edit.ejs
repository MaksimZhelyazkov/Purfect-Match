<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= cat.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cats/<%= cat._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="cat[name]" value="<%= cat.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="cat[age]" value="<%= cat.age %>" min="1" step="1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cat[image]" value="<%= cat.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="cat[description]" value="<%= cat.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/cats">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>

