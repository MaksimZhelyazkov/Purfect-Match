<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
			<h1><%= user.firstName + " " + user.lastName %></h1>
		<div class="thumbnail">
			<img src="<%= user.avatar %>" alt="user profile image">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
		Information about the user. You can put anything here
	</div>
	<div class="col-md-8">
		<h3><%= user.username %>'s cats:</h3>
		<ul>
		<% cats.forEach(function(cat) { %>
			<li><a href="/cats/<%= cat.id %>"><%= cat.name %></a></li>
		<% }); %>
		</ul>
	</div>
</div>


<% include ../partials/footer %>